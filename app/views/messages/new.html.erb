 <%= simple_form_for @message, url: create_message_url do |f| %>

  <%= @message.errors.full_messages.join(', ') %>

  <%= f.input :name, label: 'Nombre', error: 'No puede estar en blanco!' %>
  <%= f.input :email, label: 'Email', error: 'No puede estar en blanco!' %>
  <%= f.input :body, label: 'Mensaje', error: 'No puede estar en blanco!' %>

  <%= f.input :titulo, label: 'Título de la Película', error: 'No puede estar en blanco!' %>
  <%= f.input :nombre, label: 'Nombre Completo', error: 'No puede estar en blanco!' %>
  <%= f.input :rol, label: 'Cargo desarrollado', error: 'No puede estar en blanco!' %>
  <%= f.submit 'Envía' %>

  <h3><%= notice %></h3>
<% end %>

</div>
