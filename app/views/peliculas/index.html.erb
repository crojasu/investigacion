<div class="container">
<div class="col-sm">
  <table style="width:50%">
    <tr>
      <th>Título</th>
      <th>Dirección</th>
      <th>CineChile</th>
      <th>Imbd</th>
    </tr>
    <tr>
      <% @peliculas.each do |peli| %>
      <% @r = peli.imbd %>
      <% @f= JSON.parse @r.gsub('=>', ':')%>
      <td><%=  peli.titulo %></td>
      <% direccion= Rol.where(pelicula_id: peli.id, name: "Direccion") %>
      <td>
        <ul>
          <% direccion.each do |dire|%>
          <% @nombre = Personaje.find(dire.personaje_id) %>
          <li data-dire-id="<%= @nombre.id %>"><%= @nombre.name %> //
          <%= link_to "Duplicado", personaje_path(@nombre), method: :delete, remote: true %>
             <% end %>
        <ul>

        </td>
      <td><%= peli.idcinechile %></td>
      <td><%= @f["imdbID"]%></td>
      <td><%= link_to "Ver Ficha Tecnica", pelicula_path(peli) %> </td>
    </tr>
    <% end %>
  </table>
</div>
</div>
