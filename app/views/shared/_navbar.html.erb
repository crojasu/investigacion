<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo2.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">



      <!-- Links when logged in -->
      <%= link_to "Gráficos Generales", graficosgenerales_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Gráficos por Roles", graficos_path, class: "navbar-wagon-item navbar-wagon-link" %>
       <%= link_to "Películas", peliculas_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Roles", rols_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Personajes", personajes_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Edita", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Información/ Tablas", tablas_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "logo.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>


  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Gráficos generales", graficosgenerales_path %></li>
        <li><%= link_to "Gráficos por roles", graficos_path %></li>
        <li> <%= link_to "Películas", peliculas_path %></li>
        <li><%= link_to "Roles", rols_path %></li>
        <li><%= link_to "Personas", personajes_path %></li>
        <li><%= link_to "Información/ Tablas", tablas_path %></li>
      </ul>
    </div>
  </div>
</div>

